---
import Layout from '../layouts/Layout.astro';

const socialLinks = [
  {
    name: 'LinkedIn',
    url: 'https://linkedin.com/in/achrafaamri',
    icon: `<svg class="h-8 w-8" fill="currentColor" viewBox="0 0 24 24">
      <path fill-rule="evenodd" d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" clip-rule="evenodd" />
    </svg>`,
    description: 'Connect with me professionally and explore my work experience'
  },
  {
    name: 'Twitter',
    url: 'https://twitter.com/achrafaamri',
    icon: `<svg class="h-8 w-8" fill="currentColor" viewBox="0 0 24 24">
      <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84" />
    </svg>`,
    description: 'Follow me for tech updates and insights'
  }
];
---

<Layout title="Contact - Achraf AAMRI">
  <div class="bg-gradient-to-b from-blue-50 to-white min-h-screen py-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">Let's Connect</h1>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          I'm always interested in connecting with fellow developers and potential collaborators. 
          Feel free to reach out through any of these platforms!
        </p>
      </div>

      <div class="mt-16 grid gap-8 md:grid-cols-2">
        {socialLinks.map((platform) => (
          <a 
            href={platform.url}
            target="_blank"
            rel="noopener noreferrer"
            class="flex flex-col items-center p-8 bg-white rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300"
          >
            <div class="text-gray-400 hover:text-blue-500 transition-colors duration-300" set:html={platform.icon} />
            <h2 class="mt-4 text-xl font-semibold text-gray-900">{platform.name}</h2>
            <p class="mt-2 text-gray-600 text-center">{platform.description}</p>
          </a>
        ))}
      </div>

      <div class="mt-16 text-center">
        <p class="text-gray-600">
          Based in Your Location â€¢ Available for remote work and collaborations
        </p>
      </div>
    </div>
  </div>
</Layout> 